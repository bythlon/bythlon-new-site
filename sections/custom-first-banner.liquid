<!-- sections/split-section.liquid -->
<section class="split-section">
  <div class="split-section__left">
    <img src="{{ section.settings.logo }}" alt="Logo" class="logo">
    <p class="text-field">{{ section.settings.text_field_1 }}</p>
    <p class="text-field">{{ section.settings.text_field_2 }}</p>
    <p class="text-field">{{ section.settings.text_field_3 }}</p>
    <div class="buttons">
      <a href="{{ section.settings.button_1_link }}" class="btn">{{ section.settings.button_1_text }}</a>
      <a href="{{ section.settings.button_2_link }}" class="btn">{{ section.settings.button_2_text }}</a>
    </div>
  </div>
  <div class="split-section__right">
    <img src="{{ section.settings.right_image }}" alt="Right Image">
  </div>
</section>

{% schema %}
{
  "name": "Split Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "text_field_1",
      "label": "Text Field 1",
      "default": "Your text here"
    },
    {
      "type": "text",
      "id": "text_field_2",
      "label": "Text Field 2",
      "default": "Your text here"
    },
    {
      "type": "text",
      "id": "text_field_3",
      "label": "Text Field 3",
      "default": "Your text here"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button 1 Text",
      "default": "Button 1"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 Text",
      "default": "Button 2"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ]
}
{% endschema %}
